# Ultra-BugBountyScanner Environment Configuration
# Copy this file to .env and configure your API keys and settings
# Author: danielxxomg2
# Version: 1.0.0

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Scanner configuration
SCANNER_NAME=ultra-bugbounty-scanner
SCANNER_VERSION=1.0.0
SCANNER_AUTHOR=danielxxomg2

# Output and logging
OUTPUT_DIR=/app/output
LOG_LEVEL=INFO
LOG_FILE=/app/logs/scanner.log
VERBOSE=false
DEBUG=false

# Parallel processing
MAX_THREADS=50
MAX_CONCURRENT_SCANS=10
TIMEOUT=30

# =============================================================================
# API KEYS AND TOKENS
# =============================================================================

# Shodan API (https://shodan.io)
# Used for: IP intelligence, service discovery, vulnerability data
SHODAN_API_KEY=your_shodan_api_key_here

# VirusTotal API (https://virustotal.com)
# Used for: Domain/IP reputation, malware detection
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# SecurityTrails API (https://securitytrails.com)
# Used for: Historical DNS data, subdomain discovery
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here

# Censys API (https://censys.io)
# Used for: Internet-wide scanning data, certificate transparency
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# GitHub Token (https://github.com/settings/tokens)
# Used for: GitHub dorking, repository enumeration
GITHUB_TOKEN=your_github_token_here

# Telegram Bot (https://t.me/botfather)
# Used for: Real-time notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook
# Used for: Discord notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack Webhook
# Used for: Slack notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# SUBDOMAIN ENUMERATION
# =============================================================================

# Subfinder configuration
SUBFINDER_THREADS=10
SUBFINDER_TIMEOUT=30
SUBFINDER_RESOLVERS=/app/config/resolvers.txt

# Amass configuration
AMASS_TIMEOUT=60
AMASS_MAX_DNS_QUERIES=1000

# Assetfinder configuration
ASSETFINDER_SUBS_ONLY=true

# =============================================================================
# PORT SCANNING
# =============================================================================

# Nmap configuration
NMAP_THREADS=100
NMAP_TIMEOUT=300
NMAP_TOP_PORTS=1000
NMAP_SCRIPTS="default,vuln,safe"

# Masscan configuration
MASSCAN_RATE=1000
MASSCAN_TIMEOUT=10

# Custom port ranges
CUSTOM_PORTS="21,22,23,25,53,80,110,111,135,139,143,443,993,995,1723,3306,3389,5432,5900,6379,27017"
FULL_PORT_SCAN=false

# =============================================================================
# WEB DISCOVERY
# =============================================================================

# HTTP probe configuration
HTTPX_THREADS=50
HTTPX_TIMEOUT=10
HTTPX_RETRIES=2
HTTPX_FOLLOW_REDIRECTS=true

# Technology detection
WAPPALYZER_ENABLED=true
WHATWEB_ENABLED=true

# =============================================================================
# CONTENT DISCOVERY
# =============================================================================

# Gobuster configuration
GOBUSTER_THREADS=30
GOBUSTER_TIMEOUT=10
GOBUSTER_WORDLIST=/app/wordlists/common.txt
GOBUSTER_EXTENSIONS="php,html,js,txt,xml,json,bak,old"

# Feroxbuster configuration
FEROXBUSTER_THREADS=50
FEROXBUSTER_DEPTH=4
FEROXBUSTER_WORDLIST=/app/wordlists/directories.txt

# Dirsearch configuration
DIRSEARCH_THREADS=30
DIRSEARCH_EXTENSIONS="php,asp,aspx,jsp,html,js,txt,xml"

# =============================================================================
# VULNERABILITY SCANNING
# =============================================================================

# Nuclei configuration
NUCLEI_THREADS=25
NUCLEI_TIMEOUT=10
NUCLEI_RETRIES=1
NUCLEI_RATE_LIMIT=150
NUCLEI_TEMPLATES_DIR=/app/nuclei-templates
NUCLEI_SEVERITY="info,low,medium,high,critical"

# Custom Nuclei templates
CUSTOM_NUCLEI_TEMPLATES=/app/custom-templates

# Nikto configuration
NIKTO_TIMEOUT=600
NIKTO_EVASION=1

# =============================================================================
# SCREENSHOT AND VISUAL
# =============================================================================

# Aquatone configuration
AQUATONE_THREADS=5
AQUATONE_TIMEOUT=30000
AQUATONE_RESOLUTION="1440,900"

# Gowitness configuration
GOWITNESS_THREADS=10
GOWITNESS_TIMEOUT=15
GOWITNESS_RESOLUTION="1440x900"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (optional)
DB_ENABLED=false
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bugbounty_scanner
DB_USER=scanner
DB_PASSWORD=secure_password_here

# Redis (optional)
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Notification preferences
NOTIFY_ON_START=true
NOTIFY_ON_COMPLETION=true
NOTIFY_ON_CRITICAL_FINDINGS=true
NOTIFY_ON_ERROR=true

# Notification channels (comma-separated)
NOTIFICATION_CHANNELS="telegram,discord"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20

# User agent rotation
USER_AGENT_ROTATION=true
CUSTOM_USER_AGENTS_FILE=/app/config/user-agents.txt

# Proxy settings
PROXY_ENABLED=false
PROXY_LIST_FILE=/app/config/proxies.txt
PROXY_ROTATION=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# DNS settings
DNS_RESOLVERS_FILE=/app/config/resolvers.txt
DNS_TIMEOUT=5
DNS_RETRIES=3

# SSL/TLS settings
SSL_VERIFY=true
SSL_TIMEOUT=10

# Output formats
OUTPUT_FORMATS="json,html,csv"
COMPRESS_OUTPUT=true

# Cleanup settings
CLEANUP_TEMP_FILES=true
KEEP_RAW_OUTPUT=false

# Performance tuning
MEMORY_LIMIT=2048
CPU_LIMIT=80

# =============================================================================
# WORDLISTS AND DICTIONARIES
# =============================================================================

# Default wordlists
SUBDOMAIN_WORDLIST=/app/wordlists/subdomains.txt
DIRECTORY_WORDLIST=/app/wordlists/directories.txt
FILE_WORDLIST=/app/wordlists/files.txt
PARAMETER_WORDLIST=/app/wordlists/parameters.txt

# Custom wordlists
CUSTOM_WORDLISTS_DIR=/app/custom-wordlists

# =============================================================================
# REPORTING
# =============================================================================

# Report generation
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_CSV_REPORT=false
GENERATE_XML_REPORT=false

# Report customization
REPORT_TITLE="Ultra-BugBountyScanner Report"
REPORT_AUTHOR="danielxxomg2"
INCLUDE_SCREENSHOTS=true
INCLUDE_RAW_DATA=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Burp Suite integration
BURP_ENABLED=false
BURP_HOST=127.0.0.1
BURP_PORT=8080

# OWASP ZAP integration
ZAP_ENABLED=false
ZAP_HOST=127.0.0.1
ZAP_PORT=8090

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development mode
DEV_MODE=false
TEST_MODE=false
DRY_RUN=false

# Mock data for testing
USE_MOCK_DATA=false
MOCK_DATA_DIR=/app/test-data

# =============================================================================
# LEGAL AND COMPLIANCE
# =============================================================================

# Legal disclaimer
ACCEPT_LEGAL_DISCLAIMER=false
TARGET_AUTHORIZATION_REQUIRED=true

# Compliance settings
RESPECT_ROBOTS_TXT=true
HONOR_RATE_LIMITS=true
AVOID_DESTRUCTIVE_TESTS=true

# =============================================================================
# NOTES
# =============================================================================

# Configuration notes:
# 1. Replace all placeholder values with your actual API keys and settings
# 2. Set ACCEPT_LEGAL_DISCLAIMER=true only if you understand the legal implications
# 3. Ensure you have proper authorization before scanning any targets
# 4. Adjust thread counts based on your system capabilities and target tolerance
# 5. Enable notifications to stay informed about scan progress and findings
# 6. Regularly update API keys and rotate tokens for security
# 7. Use strong passwords for database connections
# 8. Consider using a VPN or proxy for additional anonymity
# 9. Keep this file secure and never commit it to version control
# 10. Review and update configuration regularly for optimal performance